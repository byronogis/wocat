{
  "name": "@wocat/monorepo",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "description": "Convert regular dependencies to Catalogs.",
  "repository": {
    "type": "git",
    "url": "https://github.com/byronogis/wocat.git"
  },
  "scripts": {
    "dev": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "build:full": "turbo run build",
    "automd": "turbo run automd && pnpm run root:automd",
    "release": "bumpp -r && pnpm run -r release",
    "root:automd": "automd --input='README*.md'",
    "root:lint": "eslint .",
    "root:lint:fix": "eslint . --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clear": "pnpx turbo run clear && pnpx rimraf -g '**/node_modules' '**/.turbo' '**/coverage'",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@wocat/cli": "workspace:*",
    "@wocat/shared": "workspace:*",
    "@wocat/typescript-config": "workspace:*",
    "automd": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "jiti": "catalog:",
    "lint-staged": "catalog:",
    "rimraf": "catalog:",
    "simple-git-hooks": "catalog:",
    "turbo": "latest",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
